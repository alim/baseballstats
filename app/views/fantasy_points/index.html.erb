<%- model_class = FantasyPoint -%>
<div class="page-header">
  <h1>Fantasy Baseball Point Assignments</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:home_run) %></th>
      <th><%= model_class.human_attribute_name(:rbi) %></th>
      <th><%= model_class.human_attribute_name(:stolen_base) %></th>
      <th><%= model_class.human_attribute_name(:caught_stealing) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @fantasy_points.each do |fantasy_point| %>
      <tr>
        <td><%= fantasy_point.home_run %></td>
        <td><%= fantasy_point.rbi %></td>
        <td><%= fantasy_point.stolen_base %></td>
        <td><%= fantasy_point.caught_stealing %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_fantasy_point_path(fantasy_point), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      fantasy_point_path(fantasy_point),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_fantasy_point_path,
            :class => 'btn btn-primary' %>
