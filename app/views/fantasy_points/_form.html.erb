<%= render partial: 'shared/validation_errors' %>

<%= form_for @fantasy_point, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :home_run, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :home_run, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :rbi, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :rbi, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :stolen_base, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :stolen_base, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :caught_stealing, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :caught_stealing, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                fantasy_points_path, :class => 'btn' %>
  </div>
<% end %>
