<%- model_class = Player -%>
<div class="page-header">
  <h1>Baseball Player</h1>
</div>

<dl class="dl-horizontal">
  <dt><strong>Player ID:</strong></dt>
  <dd><%= @player.player_id %></dd>

  <dt><strong>First Name:</strong></dt>
  <dd><%= @player.first_name %></dd>
  <dt><strong>Last Name:</strong></dt>
  <dd><%= @player.last_name %></dd>
  
  <dt><strong>Birth Year:</strong></dt>
  <dd><%= @player.birth_year %></dd>  
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              players_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_player_path(@player), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              player_path(@player),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
